<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_splash"
    android:padding="0dp"
    tools:context="com.example.d8.myapplication.RegisterActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:animateLayoutChanges="false"
        android:background="@drawable/gradient_auxsplash"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/reg_Title"
            android:textAlignment="center"
            android:textColor="@color/colorEceiptOrange"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/reg_Title" />

        <TextView
            android:id="@+id/reg_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/reg_welcome_str"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorEceiptWhite"
            android:textColorHighlight="@color/colorEceiptBlue"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="347dp"
        android:layout_height="470dp"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/reg_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reg_Email"
            android:textColor="@color/colorEceiptWhite"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/main_hint_uid"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorEceiptWhite" />

        <TextView
            android:id="@+id/reg_emailConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reg_ConfEmail"
            android:textColor="@color/colorEceiptWhite"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/main_hint_uid"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorEceiptWhite" />

        <TextView
            android:id="@+id/reg_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reg_pass"
            android:textColor="@color/colorEceiptWhite"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/main_hint_pwd"
            android:inputType="textPassword"
            android:textColor="@color/colorEceiptWhite" />

        <Button
            android:id="@+id/reg_btn_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:background="@color/colorEceiptOrange"
            android:lineSpacingExtra="14sp"
            android:text="@string/reg_verify"
            android:textAlignment="center"
            android:textColor="@color/colorEceiptWhite"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/reg_btn_signIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_roundcorner_alt"
            android:text="@string/reg_signUp"
            android:textAlignment="center"
            android:textColor="@color/colorEceiptWhite"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="OR"
            android:textAlignment="center"
            android:textColor="@color/colorEceiptOrange"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/reg_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in with Google" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
